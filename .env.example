# Configuración de Base de Datos
# Copiar este archivo como .env y completar con los valores reales

DB_USER=tu_usuario_sql_server
DB_PASSWORD=tu_password_seguro
DB_HOST=tu_servidor\instancia
DB_NAME=ImpresorasBD

# Configuración del servidor
PORT=5500
NODE_ENV=development

# URLs del frontend (opcional)
FRONTEND_URL=https://tu-dominio:5500

# Configuración CORS
CORS_ORIGIN=https://tu-dominio:5500

# Configuración de logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100